<h1>Index of Posts</h1>

<% @articles.each do |article| %>
  <h3>article title: <%= article.title %></h3>
  <p>Content: <%= article.content %> </p>
  <p><a href="/articles/<%= article.id %>">View article</a></p>
<% end %>

